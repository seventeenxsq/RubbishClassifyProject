<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/earthbackground"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/earth"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        >
        <RelativeLayout
            android:id="@+id/baseChar"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginTop="130dp"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/baseimg"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/eyeout"
                    android:layout_marginLeft="-2dp"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:src="@drawable/eyeout"/>
                <RelativeLayout
                    android:id="@+id/eyeball"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/eyeball"/>
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginLeft="34dp"
                        android:src="@drawable/eyeball"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="130dp">
                <ImageView
                    android:id="@+id/blue_can"
                    android:layout_width="23dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bluecan"/>
                <ImageView
                    android:id="@+id/yellow_can"
                    android:layout_width="22dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/yellowcan"/>
                <ImageView
                    android:id="@+id/green_can"
                    android:layout_width="23dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/greencan"/>
                <ImageView
                    android:id="@+id/red_can"
                    android:layout_width="22dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/redcan"/>
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/roadbase"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:id="@+id/roadbac"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_above="@+id/roadbase"
            android:src="@drawable/roadbac3"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:layout_below="@+id/roadbac"
            android:layout_marginTop="-30dp"
            android:src="@drawable/fixroad"/>
        <RelativeLayout
            android:id="@+id/ToLeftCar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_above="@+id/carBase1"
                android:src="@drawable/harmcar1"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_marginLeft="90dp"
                android:layout_above="@+id/carBase1"
                android:src="@drawable/kitccar1"/>
            <TextView
                android:id="@+id/carBase1"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ToRightCar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/recycar"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_above="@+id/carBase"
                android:layout_marginLeft="180dp"
                android:src="@drawable/recycar" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_above="@+id/carBase"
                android:layout_marginLeft="270dp"
                android:src="@drawable/othercar" />

            <TextView
                android:id="@+id/carBase"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </RelativeLayout>

    <com.arlib.floatingsearchview.FloatingSearchView
        android:id="@+id/floating_search_view0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        app:floatingSearch_close_search_on_keyboard_dismiss="false"
        app:floatingSearch_dimBackground="false"
        app:floatingSearch_dismissOnOutsideTouch="true"
        app:floatingSearch_leftActionMode="showSearch"
        app:floatingSearch_searchBarMarginLeft="@dimen/search_view_inset"
        app:floatingSearch_searchBarMarginRight="@dimen/search_view_inset"
        app:floatingSearch_searchBarMarginTop="280dp"
        app:floatingSearch_searchHint="Search..."
        app:floatingSearch_showSearchKey="true"
        app:floatingSearch_suggestionsListAnimDuration="250">
    </com.arlib.floatingsearchview.FloatingSearchView>

    <Button
        android:id="@+id/backButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:alpha="0"
        android:layout_marginTop="220dp"/>

    <RelativeLayout
        android:id="@+id/rubf"
        android:layout_width="wrap_content"
        android:layout_height="11dp"
        android:animateLayoutChanges="true"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bacf" />

        <ImageView
            android:id="@+id/rubImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="100dp"
            android:layout_toLeftOf="@id/ImgBase" />

        <TextView
            android:id="@+id/rubKind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="160dp"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rubName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ImgBase"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rubd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        android:layout_marginTop="275dp"
        android:background="@drawable/earthbackground">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bacd"/>
        <TextView
            android:id="@+id/explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="解释"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/explains"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_below="@+id/explain"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />
        <TextView
            android:id="@+id/suggest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投放建议"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_below="@+id/explains"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/suggests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_below="@+id/suggest"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />

    </RelativeLayout>

</RelativeLayout>

